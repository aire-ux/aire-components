{
  "name": "@aire-ux/aire-typography",
  "version": "0.0.21",
  "description": "Webcomponent aire-typography following open-wc recommendations",
  "author": "Aire-UX",
  "license": "MIT",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "clean": "rimraf dist",
    "start": "concurrently --kill-others --names build,web-dev-server \"tsc --watch --preserveWatchOutput\" \"web-dev-server --node-resolve --open --watch\" --config web-dev-server.config.mjs",
    "build": "tsc",
    "build:watch": "tsc && concurrently -k -r  \"gulp themes:build:watch\" \"tsc --watch --preserveWatchOutput\" \"wtr --watch\" ",
    "prepublish": "tsc && gulp build:themes",
    "lint": "eslint --ext .ts,.html . --ignore-path .gitignore && prettier \"**/*.ts\" --check --ignore-path .gitignore",
    "format": "eslint --ext .ts,.html . --fix --ignore-path .gitignore && prettier \"**/*.ts\" --write --ignore-path .gitignore",
    "test": "tsc && wtr --coverage",
    "test:watch": "tsc && concurrently -k -r \"tsc --watch --preserveWatchOutput\" \"wtr --watch\"",
    "storybook": "tsc && concurrently -k -r \"tsc --watch --preserveWatchOutput\" \"wds -c .storybook/server.mjs\"",
    "storybook:build": "tsc && build-storybook"
  },
  "dependencies": {
    "lit-element": "^2.5.1",
    "lit-html": "^1.4.1"
  },
  "devDependencies": {
    "@aire-ux/aire-theme-manager": "^0.0.21",
    "@open-wc/building-rollup": "^1.10.0",
    "@open-wc/eslint-config": "^4.3.0",
    "@open-wc/testing": "^2.5.33",
    "@typescript-eslint/eslint-plugin": "^4.28.0",
    "@typescript-eslint/parser": "^4.28.0",
    "@web/dev-server": "^0.1.17",
    "@web/dev-server-rollup": "^0.3.4",
    "@web/dev-server-storybook": "^0.3.5",
    "@web/test-runner": "^0.12.20",
    "autoprefixer": "^10.3.1",
    "bootstrap": "^5.0.2",
    "concurrently": "^5.3.0",
    "cssnano": "^5.0.6",
    "deepmerge": "^4.2.2",
    "es-dev-server": "^2.1.0",
    "eslint": "^7.29.0",
    "eslint-config-prettier": "^7.2.0",
    "gulp": "^4.0.2",
    "gulp-csslit": "^1.0.1",
    "gulp-dart-sass": "^1.0.2",
    "gulp-postcss": "^9.0.0",
    "gulp-rename": "^2.0.0",
    "husky": "^4.3.8",
    "lint-staged": "^10.5.4",
    "lit": "^2.0.0-rc.2",
    "node-sass": "^6.0.1",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "tslib": "^2.3.0",
    "typescript": "^4.3.4"
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "extends": [
      "@open-wc/eslint-config",
      "eslint-config-prettier"
    ],
    "plugins": [
      "@typescript-eslint"
    ],
    "rules": {
      "no-unused-vars": "off",
      "@typescript-eslint/no-unused-vars": [
        "error"
      ],
      "import/no-unresolved": "off",
      "import/extensions": [
        "error",
        "always",
        {
          "ignorePackages": true
        }
      ]
    }
  },
  "prettier": {
    "singleQuote": true,
    "arrowParens": "avoid"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "gitHead": "a3b8971e3582ba9ab4b78fa8828b0e0274eceea7"
}
