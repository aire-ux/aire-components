{
  "name": "@aire-ux/aire-button-component",
  "version": "0.0.5",
  "description": "LitElement bindings for Aire-UX button",
  "main": "dist/index.js",
  "scripts": {
    "build": "ttsc -p tsconfig.json",
    "build:watch": "ttsc -p tsconfig.json --watch",
    "test": "npx jest",
    "start": "web-dev-server --open demo/ --node-resolve",
    "start:watch": "web-dev-server --open demo/ --node-resolve --watch",
    "format": "npx prettier --write .",
    "dev": "concurrently 'npm run build' 'npm run build:watch' 'npm run start:watch'"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/aire-ux/aire-components.git"
  },
  "_moduleAliases": {
    "@aire-button": "src/main"
  },
  "keywords": [
    "serialization",
    "UI"
  ],
  "author": "aire-ux",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/aire-ux/aire-components/issues"
  },
  "homepage": "https://github.com/aire-ux/aire-components#readme",
  "devDependencies": {
    "@babel/preset-typescript": "^7.16.0",
    "@types/jest": "^27.0.3",
    "@web/dev-server": "^0.1.29",
    "@web/test-runner": "^0.13.25",
    "@zerollup/ts-transform-paths": "^1.7.18",
    "bulma": "^0.9.3",
    "concurrently": "^7.0.0",
    "husky": "^7.0.4",
    "jest": "^27.4.2",
    "lint-staged": "^12.1.2",
    "lit-element": "^3.1.1",
    "module-alias": "^2.2.2",
    "prettier": "2.5.0",
    "ts-jest": "^27.0.7",
    "ttypescript": "^1.5.13",
    "typescript": "^4.5.2",
    "typescript-plugin-css-modules": "^3.4.0"
  },
  "jest": {
    "preset": "ts-jest",
    "rootDir": "./",
    "testMatch": [
      "**/*.spec.ts"
    ],
    "moduleNameMapper": {
      "^@aire-button/(.*)$": "<rootDir>/src/main/$1"
    },
    "roots": [
      "src/main/styles",
      "src/test/styles",
      "src/main/typescript",
      "src/test/typescript"
    ],
    "globals": {
      "window": {}
    }
  },
  "dependencies": {
    "reflect-metadata": "^0.1.13"
  }
}
