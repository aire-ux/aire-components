{
  "compilerOptions": {
    "baseUrl": "./",
    "target": "es5",
    "module": "ESNext",
    "moduleResolution": "Node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "lib": ["es2015"],
    "strict": true,
    "skipLibCheck": false,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "paths": {
      "@condensation/*": ["src/main/typescript/*"]
    }

  },
  "include": [
    "src/main/typescript/**/*.ts",
  ]
}
