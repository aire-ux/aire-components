  },
  "keywords": [
    "serialization",
    "UI"
  ],
  "author": "aire-ux",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/aire-ux/aire-components/issues"
  },
  "homepage": "https://github.com/aire-ux/aire-components#readme",
  "devDependencies": {
    "@babel/preset-typescript": "^7.16.0",
    "@types/jest": "^27.0.3",
    "husky": "^7.0.4",
    "jest": "^27.4.2",
    "lint-staged": "^12.1.2",
    "prettier": "2.5.0",
    "ts-jest": "^27.0.7",
    "typescript": "^4.5.2"
  },
  "jest": {
    "preset": "ts-jest",
    "rootDir": "./",
    "testMatch": [
      "**/*.spec.ts"
