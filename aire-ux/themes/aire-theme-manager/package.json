{
  "name": "@aire-ux/aire-theme-manager",
  "version": "0.0.15",
  "description": "Aire Theme Manager",
  "author": "Aire-UX",
  "license": "MIT",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "scripts": {
    "clean": "rimraf dist",
    "rollup:watch": "rollup -c -w",
    "rollup": "rollup -c",
    "start": "concurrently --kill-others --names rollup,web-dev-server \"npm run rollup:watch\" \"web-dev-server --node-resolve --open --watch\" --config web-dev-server.config.mjs",
    "build": "tsc",
    "prepublish": "rimraf dist && concurrently \"tsc\" \"npm run rollup -c\"",
    "lint": "eslint --ext .ts,.html . --ignore-path .gitignore && prettier \"**/*.ts\" --check --ignore-path .gitignore",
    "format": "eslint --ext .ts,.html . --fix --ignore-path .gitignore && prettier \"**/*.ts\" --write --ignore-path .gitignore",
    "test": "tsc && wtr --coverage",
    "test:watch": "tsc && concurrently -k -r \"tsc --watch --preserveWatchOutput\" \"wtr --watch\"",
    "storybook": "tsc && concurrently -k -r \"tsc --watch --preserveWatchOutput\" \"wds -c .storybook/server.mjs\"",
    "storybook:build": "tsc && build-storybook"
  },
  "devDependencies": {
    "@open-wc/building-rollup": "^1.10.0",
    "@open-wc/eslint-config": "^4.3.0",
    "@open-wc/testing": "^2.5.33",
    "@rollup/plugin-node-resolve": "^11.2.1",
    "@rollup/plugin-replace": "^2.4.2",
    "@rollup/plugin-typescript": "^8.2.1",
    "@typescript-eslint/eslint-plugin": "^4.28.0",
    "@typescript-eslint/parser": "^4.28.0",
    "@web/dev-server": "^0.1.17",
    "@web/dev-server-rollup": "^0.3.4",
    "@web/dev-server-storybook": "^0.3.5",
    "@web/test-runner": "^0.12.20",
    "concurrently": "^5.3.0",
    "cssnano": "^5.0.6",
    "deepmerge": "^4.2.2",
    "es-dev-server": "^2.1.0",
    "eslint": "^7.29.0",
    "eslint-config-prettier": "^7.2.0",
    "husky": "^4.3.8",
    "lint-staged": "^10.5.4",
    "lit": "^2.0.0-rc.2",
    "lit-element": "^2.5.1",
    "lit-html": "^1.4.1",
    "postcss-dropunusedvars": "^1.2.0",
    "postcss-import": "^14.0.2",
    "postcss-scss": "^4.0.0",
    "postcss-varfallback": "^1.1.0",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "rollup": "^2.52.2",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "rollup-plugin-postcss": "^4.0.0",
    "rollup-plugin-postcss-lit": "^1.1.0",
    "rollup-plugin-typescript2": "^0.30.0",
    "sinon": "^11.1.1",
    "tslib": "^2.3.0",
    "typescript": "^4.3.4",
    "typescript-node": "^0.1.3"
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "extends": [
      "@open-wc/eslint-config",
      "eslint-config-prettier"
    ],
    "plugins": [
      "@typescript-eslint"
    ],
    "rules": {
      "no-undef": "off",
      "wc/guard-super-call": "off",
      "no-unused-vars": "off",
      "@typescript-eslint/no-unused-vars": [
        "error"
      ],
      "import/no-unresolved": "off",
      "import/extensions": [
        "error",
        "always",
        {
          "ignorePackages": true
        }
      ]
    }
  },
  "prettier": {
    "singleQuote": true,
    "arrowParens": "avoid"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "gitHead": "6e13c0642324069db71368f860e20d1b2705a7e0"
}
